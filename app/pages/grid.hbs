{{#each grids as |grid|}}
<div class="ai-c {{grid}}">
  <pre>ai-c {{grid}}</pre>

  {{partial 'grid-test'}}
  <div class="row">
    <div class="col-xs-4">
      <div class="ai-c {{grid}}">
        <pre>ai-c {{grid}}</pre>
        {{partial 'grid-test'}}
      </div>
    </div>
    <div class="col-xs-4">
      <div class="ai-c {{grid}} ai-c--bg ai-c--padded">
        <pre>ai-c {{grid}}</pre>
        {{partial 'grid-test'}}
      </div>
    </div>
    <div class="col-xs-4">
      <div class="ai-c {{grid}} ai-c--bg ai-c--padded">
        <pre>ai-c {{grid}}</pre>
        {{partial 'grid-test'}}
      </div>
    </div>
  </div>
</div>
{{/each}}


{{#each composite_grids as |grid|}}
<div class="ai-c {{grid.outer}}">
  <div class="ai-c {{grid.inner}}">
    <pre>ai-c {{grid.outer}}</pre>

    {{partial 'grid-test'}}
    <div class="row">
      <div class="col-xs-4">
        <div class="ai-c {{grid.outer}}">
          <div class="ai-c {{grid.inner}}">
            <pre>ai-c {{grid.outer}}</pre>
            {{partial 'grid-test'}}
          </div>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="ai-c {{grid.outer}}">
          <div class="ai-c {{grid.inner}}">
            <pre>ai-c {{grid.outer}}</pre>
            {{partial 'grid-test'}}
          </div>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="ai-c {{grid.outer}}">
          <div class="ai-c {{grid.inner}}">
            <pre>ai-c {{grid.outer}}</pre>
            {{partial 'grid-test'}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}

